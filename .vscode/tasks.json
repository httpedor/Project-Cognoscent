{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/TTRpgClient.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build (skip tsgen)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/TTRpgClient.sln",
				"/p:GenerateTsPackets=false",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/TTRpgClient.sln"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"type": "dotnet",
			"task": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "dotnet: build"
		},
		{
			"label": "build with tsgen",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"c:\\Users\\pedro.alvares\\RiderProjects\\Project-Cognoscent\\TTRpgClient.sln"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "tsgen",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"c:\\Users\\pedro.alvares\\RiderProjects\\Project-Cognoscent\\Tools\\PacketTsGen\\PacketTsGen.csproj"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "build web",
			"command": "npm",
			"type": "process",
			"args": [
				"run",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/WebFrontend"
			},
			"problemMatcher": []
		}
	]
}